@model List<mingmar4thsem.Models.tbl_employee>
   

@{
    ViewBag.Title = "ShowEmployees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    table{
        border-collapse:collapse;
        border:2px solid grey;
    }
    td,th{
        border:1px solid grey;
        padding:10px 20px;
    }
    h2{
        color:slategrey;
    }
</style>

<h2>Employees</h2>
        <table>
            <tr>
                <th>ID</th>
                <th>NAME</th>
                <th>ADDRESS</th>
                <th>CONTACT</th>

            </tr>
            @foreach(var data in Model)
            {
        <tr>
            <td>@(data.id)</td>
            <td>@(data.name)</td>
            <td>@(data.address)</td>
            <td>@(data.contact)</td>
        </tr>
            }
        </table>
      <br />
    <br />
    <br />
@using (Html.BeginForm("AddEmployee","Employee"))
            {
                
                <label>Name</label>
                <br />  
                <input type="text"  name="name"/>
                <br />
                <br />
                <label>Address</label>
                <br />
                <input type="text" name="address" />
                <br />
                <br />
                <label>Contact</label>
                <br />
                <input type="text" name="contact" />
                <br />
                <br />
                <input type="submit" value="ADD" />
            }