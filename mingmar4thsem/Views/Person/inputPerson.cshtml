@model  List<mingmar4thsem.Models.person>

@{
    ViewBag.Title = "inputPerson";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sn = 0;
}


<link rel="stylesheet" href="~/Content/tableStyle.css" />
<a href="@Url.Action("Create")">Add new records</a>

<table class="tbl" border="1">
    <tr>
        <th>Sn</th>
        <th>ID</th>
        <th>Name</th>
        <th>Address</th>
        <th>Contact</th>
    </tr>

    @foreach(var data in Model)
            {
                <tr>
                    <td>@(++sn)</td>
                    <td>@data.id</td>
                    <td>@data.name</td>
                    <td>@data.address</td>
                    <td>@data.contact</td>
                    <td><a href="@Url.Action("Edit", new {id = data.id})">Edit</a></td>
                    <td><a href="@Url.Action("DeletePerson", new {id = data.id})">Delete</a></td>
                </tr>
                
            }
</table>

<form action="DeletePerson">
    Enter ID : <input type="number" name="id" />
    <br />
    <input type="submit" value="Delete" />
</form>