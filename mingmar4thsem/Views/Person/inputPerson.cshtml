@model  List<mingmar4thsem.Models.person>

@{
    ViewBag.Title = "inputPerson";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sn = 0;
}


<link rel="stylesheet" href="~/Content/tableStyle.css" />
<a href="@Url.Action("Create")">Add new records</a>
<table class="tbl" border="1">
    <tr>
        <th>Sn</th>
        <th>Name</th>
        <th>Address</th>
        <th>Contact</th>
    </tr>

    @foreach(var data in Model)
            {
                <tr>
                    <td>@(++sn)</td>
                    <td>@data.name</td>
                    <td>@data.address</td>
                    <td>@data.contact</td>
                </tr>
                
            }
</table>
