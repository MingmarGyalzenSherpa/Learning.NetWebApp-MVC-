@model mingmar4thsem.Models.tbl_teacher

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    form {
        margin: 10px;
        display: flex;
        flex-flow: column;
    }

    #savebtn {
        margin-top: 20px;
        border: 0;
        border-radius: 10px;
        height: 30px;
    }

        #savebtn:hover {
            background-color: darkgray;
        }
</style>

<h2>Edit Teacher</h2>
@using (Html.BeginForm("Update", "Teacher"))
{
    <input type="hidden" name="id" value="@Model.id" />
    <label>Name</label>
    <input type="text" name="name" class="form-control" />
    <label>Subject</label>
    <input type="text" name="subject" class="form-control" />
    <input type="submit" value="Save" id="savebtn" />
}


