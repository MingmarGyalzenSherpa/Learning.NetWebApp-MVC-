@model List<mingmar4thsem.Models.tbl_teacher>
@{
    ViewBag.Title = "TableView";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int sn = 0;
}
<link rel="stylesheet" href="~/Content/tableStyle.css" />
<h2>TableView</h2>
<table class="tbl" border="1">
    <tr>
        <th> Sn </th>
        <th>ID</th>
        <th>Name</th>
        <th>Subject</th>
    </tr>
    @foreach (var data in Model)
    {
<tr>
    <td>@(++sn)</td>
    <td>@(data.id)</td>
    <td>@(data.name)</td>
    <td>@(data.subject)</td>
    <td><a href="@Url.Action("Delete", new { id = data.id } )">Delete</a></td>
    <td><a href="@Url.Action("Edit", new {id = data.id})">Edit</a></td>

</tr>
     }
</table>
@Html.ActionLink("Add Teacher", "AddTeacher")

